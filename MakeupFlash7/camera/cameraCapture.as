package {	import flash.display.Sprite;	import flash.media.Camera;	import flash.media.Video;	import flash.display.BitmapData;	import flash.display.Bitmap;	import flash.printing.PrintJob;	import flash.events.MouseEvent;	import flash.net.FileReference;	import flash.utils.ByteArray;	import flash.display.MovieClip;	import flash.display.SimpleButton;	public class cameraCapture extends Sprite	{		private var camera:Camera = Camera.getCamera();		private var video:Video;				private var bmp:Bitmap;		private var bmdata:BitmapData;				private var fileReference:FileReference = new FileReference();		private var byteArray:ByteArray;				private var faceMakeuped:MovieClip;		private var faceMakeuped2:MovieClip;		private var capture:MovieClip;		private var discardButton:SimpleButton;		public function cameraCapture():void		{						addButton();											}				private function addButton()		{			discardButton =new DiscardButton();			addChild(discardButton);			discardButton.x=500;			discardButton.y=250;						capture = new captureBtn();			addChild(capture);			capture.x = 500;			capture.y = 300;						video = new Video(300,240);			addChild(video);						bmdata= new BitmapData(300,240); //x y 的長寬									discardButton.visible = false;						discardButton.addEventListener(MouseEvent.MOUSE_UP, discard);			capture.addEventListener(MouseEvent.MOUSE_UP, captureImage);			if (camera != null)			{				video.smoothing = true;				video.attachCamera(camera);				video.x = 150;				video.y = 40;				addChild(video);			}			else			{				trace("No Camera Detected");			}						faceMakeuped = new faceMake();			addChild(faceMakeuped);			faceMakeuped.x=300;			faceMakeuped.y=160;								}		private function captureImage(e:MouseEvent):void		{						bmdata.draw(video);			bmp = new Bitmap(bmdata);			bmp.x = 150;			bmp.y = 40;			bmp.scaleX= bmp.scaleY =1;			addChild(bmp);			capture.visible = false;			discardButton.visible = true;						removeChild(faceMakeuped);						faceMakeuped2 = new faceMake2();			addChild(faceMakeuped2);			faceMakeuped2.x=300;			faceMakeuped2.y=160;					}		private function discard(e:MouseEvent):void		{			addChild(faceMakeuped);			removeChild(bmp);			discardButton.visible = false;			capture.visible = true;		}	}}